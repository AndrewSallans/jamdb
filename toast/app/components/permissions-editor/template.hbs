<thead>
  <tr>
    <th width="2%"></th>
    <th>User Selector</th>
    <th>Permission Level</th>
  </tr>
</thead>
<tbody>
{{#each-in permissions as |user-selector permission|}}
  <tr>
    <td><i {{action 'removePermission' user-selector}} class="fa fa-minus ibtn"></i></td>
    <td>{{user-selector}}</td>
    <td>{{permission}}</td>
  </tr>
{{/each-in}}
  <tr>
    <td><i {{action 'addPermission'}} class="fa fa-plus ibtn" style="vertical-align:-webkit-baseline-middle;"></i></td>
    <td>
      {{input value=newPermissionSelector type="text" class="form-control"}}
    </td>
    <td>
      <select onchange={{action (mut newPermissionLevel) value="target.value"}}>
        {{#each permissionLevels as |permission|}}
          <option>{{permission}}</option>
        {{/each}}
      </select>
    </td>
  </tr>
</tbody>
