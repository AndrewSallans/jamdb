<section class="content">
<div class="row">
  <div class="col-md-12">

    <div class="box">
      <div class="box-header">
        <h3 class="box-title">{{model.id}}</h3>
      </div>
      <br>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <div class="row">
          <div class="col-xs-6">
            {{input value=queryText type="text" class="form-control" placeholder="Search"}}
          </div>
          <div class="col-xs-6">
            <ul class="pagination pagination-sm no-margin pull-right">
              {{#if hasPrev}}
                <li><a style="cursor: pointer;" {{action 'prevPage'}}>«</a></li>
              {{/if}}
              <li><a>{{page}}</a></li>
              {{#if hasNext}}
                <li><a style="cursor: pointer;" {{action 'nextPage'}}>»</a></li>
              {{/if}}
            </ul>
          </div>
        </div>
      </div>
      <div class="box-body">
        {{#if history.isPending}}
          <div style="text-align: center;">
            <i class="fa fa-spinner fa-pulse"></i>
          </div>
        {{else}}
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Operation</th>
              </tr>
            </thead>
            <tbody>
              {{#each history as |entry| }}
                <tr>
                  <td>{{entry.id}}</td>
                  <td>{{entry.operation}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/if}}
      </div>
    </div>
  </div>
</div>
</section>

{{outlet}}
