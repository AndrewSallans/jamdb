<section class="content">
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">{{model.name}}</h3>
        <div class="box-tools" style="width: 100%">
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                {{input value=queryText type="text" class="form-control" placeholder="Search"}}
            </div>
            <div class="col-md-4">
              <ul class="pagination pagination-sm no-margin pull-right">
                {{#if hasPrev}}
                  <li><a style="cursor: pointer;" {{action 'prevPage'}}>«</a></li>
                {{/if}}
                <li><a>{{page}}</a></li>
                {{#if hasNext}}
                  <li><a style="cursor: pointer;" {{action 'nextPage'}}>»</a></li>
                {{/if}}
              </ul>
            </div>
          </div>
        </div>
        </div>
        <div class="box-body">
          {{#if tableData.isPending}}
            <div style="text-align: center;">
              <i class="fa fa-spinner fa-pulse"></i>
            </div>
          {{else}}
            {{#ember-fancytree data=tableData}}
              <colgroup>
                <col width="40%">
                <col width="55%">
                <col width="5%">
              </colgroup>
              <thead>
                <tr>
                  <th>Key</th>
                  <th>Value</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            {{/ember-fancytree}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>

{{outlet}}
